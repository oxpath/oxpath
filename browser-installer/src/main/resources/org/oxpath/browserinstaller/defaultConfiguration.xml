<?xml version="1.0" encoding="UTF-8" ?>
<diadem>
	<browser-installer>
		<platforms>
	  		<platform os-type="LINUX">
				<home user-home-rel="true">.oxpath</home>
				<browser name="FIREFOX">
					<source>
						<url>https://ftp.mozilla.org/pub/firefox/releases/47.0.1/linux-x86_64/en-GB/firefox-47.0.1.tar.bz2</url>
						<archive-type>tar.bz2</archive-type>
						<in-arc-dir-name>firefox</in-arc-dir-name>
						<run-file-path>/org/oxpath/browserinstaller/linux/firefox/firefox_start.sh</run-file-path>
						<run-xvfb-file-path>/org/oxpath/browserinstaller/linux/firefox/firefox_xvfb_start.sh</run-xvfb-file-path>
						<xvfb-run-path>/org/oxpath/browserinstaller/linux/firefox/xvfb-run</xvfb-run-path>
						<display-size-file-path>/org/oxpath/browserinstaller/linux/firefox/display_size</display-size-file-path>
					</source>
					<destination>
						<relpath override="true">firefox_47.0.1</relpath>
					</destination>
				</browser>
			</platform>
		</platforms>
	</browser-installer>
</diadem>
